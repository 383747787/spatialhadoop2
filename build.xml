<project name="SpatialHadoop" default="compile" basedir=".">
  <description>Compiles SpatialHadoop and builds packages to be installed on an existing Hadoop cluster</description>
  <!-- set global properties for this build -->
  <property name="src" location="src"/>
  <property name="build" location="bin"/>
  <property name="dist"  location="dist"/>
  <property name="version" value="2b1"/>
  
  <path id="lib.path.ref">
    <fileset dir="lib" includes="*.jar"/>
  </path>

  <path id="hadoop.lib">
    <fileset dir="/home/eldawy/hadoop-1.2.1" includes="*.jar"/>
    <fileset dir="/home/eldawy/hadoop-1.2.1/lib" includes="*.jar"/>
  </path>
  
  <target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>
  
  <target name="compile" depends="init"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" destdir="${build}" classpath="${toString:lib.path.ref}:${toString:hadoop.lib}"/>
    <copy file="${src}/spatial-default.xml" todir="${build}"/>
  </target>
  
  <target name="dist" depends="compile"
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}"/>
    <mkdir dir="${dist}/lib"/>
    <mkdir dir="${dist}/conf"/>

    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/spatialhadoop-${version}.jar" basedir="${build}"/>
    <copy file="LICENSE.txt" todir="${dist}"/>
    <copy file="README.md" todir="${dist}"/>
    <copy todir="${dist}/lib">
      <fileset dir="lib"/>
    </copy>
    <copy file="src/conf/spatial-site.xml" todir="${dist}/conf"/>
  </target>
  
  <target name="package" depends="dist"
      description="create a package files for the distribution">
    <!-- Create the package directory -->
    <mkdir dir="${dist}/package"/>
    
    <!-- Build the tar file -->
    <tar destfile="${dist}/package/spatialhadoop-${version}.tar.gz"
         basedir="${dist}"
         excludes="package"
         compression="gzip"/>
  </target>
  
  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>
