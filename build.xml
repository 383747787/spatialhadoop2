<project name="SpatialHadoop" default="compile" basedir="." xmlns:ivy="antlib:org.apache.ivy.ant">
  <description>Compiles SpatialHadoop and builds packages to be installed on an existing Hadoop cluster</description>
  <!-- set global properties for this build -->
  <property name="src" location="src"/>
	<property name="res" location="res"/>
  <property name="doc" location="doc"/>
  <property name="build" location="bin"/>
  <property name="dist"  location="dist"/>
  <property name="dist2"  location="dist2"/>
  <property name="version" value="2-b3"/>
  
  <path id="hdflib.path.ref">
    <fileset dir="lib/hdflib" includes="*.jar"/>
  </path>

	<path id="lib.path.ref">
    <fileset dir="lib" includes="*.jar"/>
  </path>
  
  <target name="resolve" description="--> retrieve dependencies with ivy">
    <ivy:retrieve />
  </target>
  
  <target name="init" depends="resolve">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>
  
  <target name="compile" depends="init"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" destdir="${build}"
    	  classpath="${toString:hdflib.path.ref}:${toString:lib.path.ref}"
    	  target="1.6" source="1.6" debug="true" debuglevel="lines,vars,source"/>
    <copy todir="${build}">
    	<fileset dir="${res}">
    		<include name="spatial-default.xml"/>
    		<include name="zoom_view.html"/>
    	</fileset>
  	</copy>
  </target>
	
  <target name="doc" depends="init"
      description="Generates JavaDoc for the source code">
    <mkdir dir="${doc}"/>
    <javadoc sourcepath="${src}" destdir="${doc}"/>
  </target>
  
  <target name="dist" depends="compile"
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}"/>
    <mkdir dir="${dist}/lib"/>
    <mkdir dir="${dist}/conf"/>

    <!-- Put everything in ${build} into the spatialhadoop-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/lib/spatialhadoop-${version}.jar" manifest="${res}/MANIFEST.MF" basedir="${build}"/>
    <copy file="LICENSE.txt" todir="${dist}"/>
    <copy file="README.md" todir="${dist}"/>
    <copy todir="${dist}/lib">
      <fileset dir="lib">
        <include name="esri-geometry-api-*.jar"/>
        <exclude name="*sources.jar"/>
        <exclude name="*javadoc.jar"/>
        <include name="jts-*.jar"/>
      </fileset>
      <fileset dir="lib/hdflib"/>
    </copy>
    <copy file="${res}/conf/spatial-site.xml" todir="${dist}/conf"/>

    <copy todir="${dist}/bin">
      <fileset dir="${res}/bin"/>
    </copy>
    
  	<copy todir="${dist}/webapps">
      <fileset dir="${res}/webapps"/>
    </copy>
  </target>
  
  <target name="package" depends="dist"
      description="create a package files for the distribution">
    <!-- Create the package directory -->
    <mkdir dir="${dist}/package"/>
    
    <!-- Build the tar file -->
    <tar destfile="${dist}/package/spatialhadoop-${version}.tar.gz"
         basedir="${dist}"
         excludes="package package/*"
         compression="gzip"/>
  </target>
  
	<target name="install" depends="package"
	    description="Install SpatialHadoop on an existing Hadoop installation">
	  <!-- Extract the constructed package file (tar) in the destination directory -->
		<untar src="${dist}/package/spatialhadoop-${version}.tar.gz"
           dest="${hadoop.dir}" compression="gzip"/>
  </target>

	<!-- Build targets for Hadoop 2 -->
	

  <target name="dist2" depends="compile"
        description="generate a distribution for Hadoop 2" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist2}"/>
    <mkdir dir="${dist2}/share/hadoop/common/lib"/>
    <mkdir dir="${dist2}/etc/hadoop"/>

    <!-- Put everything in ${build} into the spatialhadoop-${DSTAMP}.jar file -->
    <jar jarfile="${dist2}/share/hadoop/common/lib/spatialhadoop-${version}.jar" manifest="${res}/MANIFEST.MF" basedir="${build}"/>
    <copy file="LICENSE.txt" todir="${dist}"/>
    <copy file="README.md" todir="${dist}"/>
    <copy todir="${dist2}/share/hadoop/common/lib">
      <fileset dir="lib">
        <include name="esri-geometry-api-*.jar"/>
        <exclude name="*sources.jar"/>
        <exclude name="*javadoc.jar"/>
        <include name="jts-*.jar"/>
      </fileset>
      <fileset dir="lib/hdflib"/>
    </copy>
    <copy file="${res}/conf/spatial-site.xml" todir="${dist2}/etc/hadoop"/>

    <copy todir="${dist}/bin">
      <fileset dir="${res}/bin"/>
    </copy>
    
    <copy todir="${dist}/hadoop/hdfs/webapps/hdfs">
      <fileset dir="${res}/webapps"/>
    </copy>
  </target>

  
  <target name="package2" depends="dist2"
    description="create a package files for the distribution for Hadoop 2">
    <!-- Create the package directory -->
    <mkdir dir="${dist2}/package"/>
    
    <!-- Build the tar file -->
    <tar destfile="${dist2}/package/spatialhadoop-${version}-2.tar.gz"
         basedir="${dist2}"
         excludes="package package/*"
         compression="gzip"/>
  </target>


  <target name="install2" depends="package2"
    description="Install SpatialHadoop on an existing Hadoop 2 installation">
    <!-- Extract the constructed package file (tar) in the destination directory -->
    <untar src="${dist}/package2/spatialhadoop-${version}.tar.gz"
           dest="${hadoop2.dir}" compression="gzip"/>
  </target>

	<target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
    <delete dir="${dist2}"/>
  </target>
</project>
